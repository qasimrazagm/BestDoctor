@{
    ViewBag.Title = "Add";
}

<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>

<body>
    <div>
        <h2>Add a Hospital</h2>
        <label><a href="/Hospital/Index">Home page</a></label>
    </div>
    <div class="container">
        <form action="/Hospital/AddHospital" method="post" role="form" enctype="multipart/form-data">
            <div class="form-group">
                <label>Name: </label>
                <input type="text" name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label>City: </label>
                <input type="text" name="city" class="form-control" />
            </div>
            <div class="form-group">
                <label>District: </label>
                <input type="text" name="district" class="form-control" />
            </div>
            <div class="form-group">
                <label>Timing: </label>
                <input type="text" name="timing" class="form-control" />
            </div>
            <div class="form-group">
                <label>Website: </label>
                <input type="text" name="website" class="form-control" />
            </div>
            <div class="form-group">
                <label>HPhone: </label>
                <input type="tel" name="phone" class="form-control" />
            </div>
            <h1>FRONTView</h1>
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon">Upload Image</span>
                <div class="col-md-5">
                    <input type="file" name="HPicture" />
                </div>

            </div>
            <h1>SideView</h1>
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon">Upload Image</span>
                <div class="col-md-5">
                    <input type="file" name="SPicture" />
                </div>

            </div>
            <h1>InnerView</h1>
            <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon">Upload Image</span>
                <div class="col-md-5">
                    <input type="file" name="IPicture" />
                </div>

            </div>
            <div class="form-group">
                <button type="submit" name="btnadd" class="btn btn-primary">Add Hospital</button>
            </div>
        </form>
    </div>
</body>
</html>
