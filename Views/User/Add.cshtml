@{
    ViewBag.Title = "Add";
}

<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>

<body>
    <div>
        <h2>SignUp as new User</h2>
        <label><a href="/User/Index">Home page</a></label>
    </div>
    <div class="container">
        <form action="/User/AddUser" method="post" role="form" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name: </label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>password: </label>
        <input type="password" name="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>ConfirmPassword: </label>
        <input type="text" name="CPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label>phone: </label>
        <input type="tel" name="phone" class="form-control" />
    </div>
             <div style="margin-bottom: 25px" class="input-group">
                 <span class="input-group-addon">Upload Image</span>
                 <div class="col-md-5">
                     <input type="file" name="UPicture" />
                 </div>
             </div>
    <div class="form-group">
        <button type="submit" name="btnadd" class="btn btn-primary">Add User</button>
    </div>
</form>
    </div>
</body>
</html>
