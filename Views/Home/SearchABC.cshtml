</head>

<body>
    <div>
        <h2> Doctors</h2>
        <label><a href="/Home/Index">Home page</a></label>
    </div>
    <div class="container">
        <form action="/Home/Search" method="post" role="form">
            
                    @foreach (Doctor d in Model)
                    {
                      <h1 class="alert-success">HOSPITAL AGAINST DOCTOR</h1>  
                <table class="table table-bordered" >
                <thead>
                    <tr>
                        <td>HospitalId</td>
                        <td>HospitalName</td>
