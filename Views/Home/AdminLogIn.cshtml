

    @{
        ViewBag.Title = "LogIn";
    }

    <!DOCTYPE HTML>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
        <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.js"></script>

    </head>
    <body>
        <!-- Navigation -->
        <div>
            <h2>LogIn as Admin</h2>
            <label><a href="/Main/Index">Home page</a></label>
        </div>
        <div class="container">
            <h3 class="section-subheading text-muted">Login</h3>
            <div class="row">
                <div class="span12">
                    <div class="" id="loginModal">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

                        </div>
                        <div class="modal-body">
                            <div class="well">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#login" data-toggle="tab">Login</a></li>

                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane active in" id="login">
                                        <form class="form-horizontal" action="/Home/checkLogin" method="POST">
                                            <fieldset>
                                                <div id="legend">

                                                </div>
                                                <div class="control-group">
                                                    <!-- Username -->
                                                    <label class="control-label" for="username">Username</label>
                                                    <div class="controls">
                                                        <input type="text"  name="username" placeholder="username" class="input-xlarge">
                                                    </div>
                                                </div>

                                                <div class="control-group">
                                                    <!-- Password-->
                                                    <label class="control-label" for="password">Password</label>
                                                    <div class="controls">
                                                        <input type="password"  name="password" placeholder="Password" class="input-xlarge">
                                                    </div>
                                                </div>


                                                <div class="control-group" >
                                                    <!-- Button -->                   
                                                     <input type="submit" value="Login"/>
                                                </div>
                                                
                                            </fieldset>
                                        </form>
                                        <h1> @ViewBag.Error</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer>
                <div class="row">
                    <div class="col-lg-12">
                        <p>Copyright &copy; Your Website 2015</p>
                    </div>
                </div>
            </footer>
        </div>

    </body>
</html>
