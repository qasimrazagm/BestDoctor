@{
    ViewBag.Title = "AddP";
}

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>

<body>
    <div>
        <h2> new Patient</h2>
    </div>
    <div class="container">
        <h1>HospitalId is @Session["HospitalId"]</h1>
        <h1>DoctorId is @Session["DoctorId"]</h1>
        <form action="/Home/AddPatient" method="post">
            <div class="form-group">
                <label>HospitalId: </label>
                <input type="text" name="HospitalId" class="form-control" />
            </div>
            <div class="form-group">
                <label>DoctorId: </label>
                <input type="text" name="DoctorId" class="form-control" />
            </div>
            <div class="form-group">
                <label>Name: </label>
                <input type="text" name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>gender: </label>
                <input type="text" name="gener" class="form-control" />
            </div>
            <div class="form-group">
                <label>age: </label>
                <input type="text" name="age" class="form-control" />
            </div>
            <div class="form-group">
                <label>city: </label>
                <input type="text" name="city" class="form-control" />
            </div>
            <div class="form-group">
                <label>district: </label>
                <input type="text" name="district" class="form-control" />
            </div>
            <div class="form-group">
                <label>country: </label>
                <input type="text" name="country" class="form-control" />
            </div>
            <div class="form-group">
                <label>email: </label>
                <input type="text" name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label>phone: </label>
                <input type="tel" name="phone" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" name="btnadd" class="btn btn-primary">Add Patient</button>
            </div>
        </form>
    </div>
</body>
</html>
