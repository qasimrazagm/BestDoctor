@{
    ViewBag.Title = "Add";
}

}

<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>

<body>
    <div class="container">
        @if (Session["img"] != null)
        {
            <img src="~/Files/@ViewBag.img" />
        }
        else
        {
            <form action="/Staff/Save" method="post" enctype="multipart/form-data">

                Upload Image: <input type="file" name="file" />


                <input type="submit" value="upload" />
            </form>
        }

    </div>
    <div>
        <h2>Add a Admin</h2>
        <label><a href="/Staff/Index">Home page</a></label>
    </div>
    <div class="container">
        <form action="/Staff/AddAdmin" method="post" role="form">
            <div class="form-group">
                <label>Name: </label>
                <input type="text" name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>pasword: </label>
                <input type="text" name="password" class="form-control" />
            </div>
            
            <div class="form-group">
                <label>phone: </label>
                <input type="tel" name="phone" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" name="btnadd" class="btn btn-primary">Add Admin</button>
            </div>
        </form>
    </div>
</body>
</html>
