@{
    ViewBag.Title = "SearchAdmin";
}

<html>

<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>

<body>
    <div>
        <h2> Resultant Admin</h2>
        <label><a href="/Staff/Index">Home page</a></label>
    </div>
    <div class="container">
        <form action="/Staff/UpdateAdmin" method="post" role="form">
            <div class="form-group">
                <label>Name: </label>
                <input type="text" name="Name" value="@Model.name" class="form-control" />
            </div>
            
            <div class="form-group">
                <label>Password: </label>
                <input type="text" name="@Model.password" class="form-control" />
            </div>
            <div class="form-group">
                <label>Hphone: </label>
                <input type="tel" name="@Model.phone" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" name="btnadd" class="btn btn-primary">Update Admin</button>
            </div>
        </form>
    </div>
</body>

</html>
